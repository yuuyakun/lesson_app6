<%= provide(:title, 'ユーザー登録') %>
<h2>ユーザー登録</h2>

  <%= form_for(@user) do |f| %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Confimation" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "登録", class: "btn btn-primary" %>
  <% end %>
