<%= provide(:title, 'ユーザー登録') %>
<h1>ユーザー登録</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">

  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-contlor' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-contlor' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-contlor' %>

  <%= f.label :password_confirmation, "Confimation" %>
  <%= f.password_field :password_confirmation, class: 'form-contlor' %>

  <%= f.submit "登録", class: "btn btn-primary" %>
  <% end %>
    </div>
  </div>
